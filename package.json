{
  "name": "note-editor",
  "version": "0.0.1",
  "description": "",
  "main": "electron-main.js",
  "scripts": {
    "dev": "rm -rf node_modules/.cache && yarn run webpack-dev-server --colors --config ./webpack.dev.ts",
    "prod": "yarn run webpack --colors --config ./webpack.prod.ts",
    "ts": "tsc electron-main.ts --lib esnext --skipLibCheck",
    "plugin": "ts-node build-asset.ts",
    "dev:electron": "yarn run ts && cross-env NODE_ENV=development yarn run electron .",
    "build:win": "yarn run prod && yarn run ts && electron-builder -w --dir",
    "build:mac": "yarn run prod && yarn run ts && electron-builder -m --dir"
  },
  "license": "MIT",
  "devDependencies": {
    "@material-ui/core": "3.9.0",
    "@material-ui/icons": "^3.0.2",
    "@material-ui/lab": "^3.0.0-alpha.28",
    "@types/classnames": "^2.2.7",
    "@types/config": "0.0.34",
    "@types/dat.gui": "^0.7.2",
    "@types/mousetrap": "^1.6.1",
    "@types/howler": "^2.0.5",
    "@types/lodash": "^4.14.120",
    "@types/mathjs": "^4.4.5",
    "@types/pixi.js": "^4.8.6",
    "@types/react": "^16.7.20",
    "@types/react-color": "^2.14.0",
    "@types/react-dom": "^16.0.11",
    "@types/webpack-merge": "^4.1.3",
    "babel-runtime": "^6.26.0",
    "cross-env": "^5.2.0",
    "electron": "^4.0.2",
    "electron-builder": "^20.38.5",
    "electron-load-devtool": "^1.2.0",
    "file-loader": "^3.0.1",
    "hard-source-webpack-plugin": "^0.13.1",
    "html-webpack-plugin": "^3.2.0",
    "pixi.js": "^4.8.5",
    "ts-node": "^8.0.1",
    "typescript": "^3.2.4",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.0",
    "webpack-cli": "^3.2.1",
    "webpack-dev-server": "^3.1.14",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "config": "^3.0.1",
    "dat.gui": "^0.7.5",
    "fast-json-patch": "^2.0.7",
    "howler": "^2.1.1",
    "immutable": "^4.0.0-rc.12",
    "lodash": "^4.17.11",
    "mathjs": "^5.4.1",
    "mobx": "^5.9.0",
    "mobx-react": "^5.4.3",
    "mobx-remotedev": "^0.3.0",
    "mousetrap": "^1.6.2",
    "notistack": "^0.4.1",
    "react": "^16.7.0",
    "react-color": "^2.17.0",
    "react-dnd": "^7.0.2",
    "react-dnd-html5-backend": "^7.0.2",
    "react-dom": "^16.7.0",
    "ts-loader": "^5.3.3"
  },
  "engines": {
    "node": ">=10.12.0"
  },
  "build": {
    "appId": "note-editor",
    "mac": {
      "category": "category.type"
    },
    "files": [
      "electron-main.js",
      "dist/index.html",
      "dist/dist/*"
    ]
  }
}
